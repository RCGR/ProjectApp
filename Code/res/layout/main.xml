<?xml version="1.0" encoding="utf-8"?>
<!-- toolbar goes to side -->


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:background="@color/white"
>
    <Toolbar
        android:layout_height="30dp"
        android:layout_width="fill_parent"
        android:background="@color/black"
        android:title="MenuBar"
    />

    <Button
        android:id="@+id/zoek_button_id"
        android:text="Zoek naar een uitje!"
        android:layout_marginTop="200dp"
        android:background="@color/darkerRed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
    />
    <Button
        android:id="@+id/nomineer_button_id"
        android:text="Nomineer een uitje"
        android:layout_marginTop="1dp"
        android:background="@color/darkerRed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
    />
    <Button
        android:id="@+id/stem_button_id"
        android:text="Stem op uitjes"
        android:layout_marginTop="1dp"
        android:background="@color/darkerRed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
    />
</LinearLayout>

